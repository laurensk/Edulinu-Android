<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsPopUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/newsPopUpImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/linu_liest" />

        <TextView
            android:id="@+id/newsPopUpNewsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsPopUpImageView"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="@string/news_pop_up_title"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/newsPopUpTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsPopUpNewsTextView"
            android:layout_centerInParent="true"
            android:layout_marginTop="7dp"
            android:text="@string/news_pop_up_title"
            android:textColor="@android:color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/newsPopUpAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsPopUpTitleTextView"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="@string/news_pop_up_title"
            android:textSize="14sp" />

        <Button
            android:id="@+id/newsPopUpDismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:text="@string/news_pop_up_button" />

        <TextView
            android:id="@+id/newsPopUpMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/newsPopUpDismissButton"
            android:layout_below="@+id/newsPopUpAuthorTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="vertical"
            android:text="@string/news_pop_up_title"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>