<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laurensk.edulinu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FirebaseInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splashscreen.SplashscreenDoneActivity"></activity>
        <activity android:name=".ui.splashscreen.SplashscreenFormActivity" />
        <activity
            android:name=".ui.splashscreen.SplashscreenWelcomeActivity"
            android:label="Willkommen bei Edulinu" />
        <activity
            android:name=".ui.more.MoreAppSettingsActivity"
            android:label="@string/settings_title" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.teacherTable.TeacherTableWebViewActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.myEdulinu.MyEdulinuAddTeacher"
            android:label="@string/title_myEdulinuAddTeacher"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.more.MoreOpenURLActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>